<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg">

	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Welcome"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="#FFFFFFFF"
		android:typeface="monospace"
		android:textSize="30sp"
		android:textStyle="bold"
		android:id="@+id/welcomeText"
		android:layout_below="@id/activitymainImageView1"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="50dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Sign Up to Continue"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="#FFFFFFFF"
		android:typeface="monospace"
		android:textSize="15sp"
		android:textStyle="bold"
		android:id="@+id/signinText"
		android:layout_below="@id/welcomeText"
		android:layout_marginLeft="10dp"/>

	<EditText
		android:layout_width="match_parent"
		android:ems="10"
		android:layout_height="wrap_content"
		android:layout_below="@id/signinText"
		android:layout_centerHorizontal="true"
		android:layout_margin="10dp"
		android:hint="Email..."
		android:textColor="#FFFFFFFF"
		android:textColorHint="#FFFFFFFF"
		android:singleLine="true"
		android:id="@+id/email"
		android:padding="10dp"
		android:drawableLeft="@drawable/ic_account_outline"
		android:drawablePadding="10dp"
		android:background="@drawable/border"/>

	<EditText
		android:layout_width="match_parent"
		android:ems="10"
		android:layout_height="wrap_content"
		android:layout_below="@id/email"
		android:layout_centerHorizontal="true"
		android:layout_margin="10dp"
		android:hint="Username..."
		android:textColor="#FFFFFFFF"
		android:textColorHint="#FFFFFFFF"
		android:singleLine="true"
		android:id="@+id/username"
		android:padding="10dp"
		android:drawableLeft="@drawable/ic_key_outline"
		android:drawablePadding="10dp"
		android:inputType="text"
		android:background="@drawable/border"/>

	<EditText
		android:layout_width="match_parent"
		android:ems="10"
		android:layout_height="wrap_content"
		android:layout_below="@id/username"
		android:layout_centerHorizontal="true"
		android:layout_margin="10dp"
		android:hint="Password..."
		android:textColor="#FFFFFFFF"
		android:textColorHint="#FFFFFFFF"
		android:singleLine="true"
		android:id="@+id/password"
		android:padding="10dp"
		android:drawableLeft="@drawable/ic_key_outline"
		android:drawableRight="@drawable/ic_eye_outline"
		android:drawablePadding="10dp"
		android:inputType="textNoSuggestions|textPassword"
		android:background="@drawable/border"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Sign Up"
		android:layout_below="@id/password"
		android:layout_centerHorizontal="true"
		android:id="@+id/signup"
		android:textColor="#FFFFFFFF"
		android:layout_margin="10dp"
		android:background="@drawable/btn_bg"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Already Registered? Sign In"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_below="@id/signup"
		android:layout_centerHorizontal="true"
		android:textColor="#FF020202"
		android:textStyle="bold"
		android:typeface="monospace"
		android:id="@+id/signinText"/>

	

</RelativeLayout>

